<Window x:Class="Gilmetdinova41size.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gilmetdinova41size"
        mc:Ignorable="d"
        Title="Gilmetdinova41size" Height="450" Width="800" Icon="res\icon.ico" FontFamily=" Comic Sans MS" MinHeight="400" MinWidth="600">
    <Grid Background="White">
        <Grid.RowDefinitions >
            <RowDefinition  Height="75" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            
        </Grid.RowDefinitions>
        <Border Background="#FFFFCC99" Grid.Row="0"></Border>
        <Image Source="res/logo.png" HorizontalAlignment="Left"> </Image>
        
        <TextBlock Text="ООО 41 размер" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35"></TextBlock>
        <Button x:Name="btnback" Content="Назад" Height="35" Width="100"  Margin="5" HorizontalAlignment="Right" Background="#FFCC6600" Click="Button_Click"></Button>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
        
    </Grid>
</Window>
